{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "ts",
      "type": "shell",
      "command": "ts-node",
      "args": ["--files=true", "${relativeFile}"],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated",
        "clear": false,
        "revealProblems": "onProblem",
        "showReuseMessage": false
      }
    }
  ]
}
